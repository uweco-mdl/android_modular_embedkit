<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        style="@style/ContainerStyle"
        android:background="@color/mdliveBottomBlueColor">

        <RelativeLayout
            style="@style/wagHeaderLinearLayoutStyle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/back_arrow_hdpi" />

            <ImageView
                android:id="@+id/homeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/backImg"
                android:background="@drawable/home_icon" />

            <TextView
                android:id="@+id/headerTxt"
                style="@style/HeaderTextViewStyle"
                android:layout_centerInParent="true"
                android:gravity="start|center"
                android:text="Choose Pharmacy">

            </TextView>


            <ImageView
                android:id="@+id/filterImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@drawable/filter_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mdliveBackgroundColor"
            android:padding="10dp"
            android:text="@string/default_pharm_text"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ScrollView
            android:id="@+id/mapscrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/mapContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_above="@+id/rl_footer"
                    android:layout_weight="40">

                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/mapView"
                        class="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_above="@+id/rl_footer" />

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/rl_footer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="60"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/noResultsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:text="No Results Found."
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <ListView
                        android:id="@+id/pharmList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noResultsText"
                        android:clickable="true"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="1dip"
                        android:orientation="vertical" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@color/mdliveBackgroundColor"
                        android:layout_below="@+id/pharmList"
                        android:layout_height="wrap_content">



                        <ProgressBar
                            android:id="@+id/bottomLoader"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:visibility="visible"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:indeterminateDrawable="@drawable/mdlive_progressbar"
                            />

                        <include
                            android:id="@+id/footer"
                            style="@style/Footer_Style"
                            layout="@layout/mdlive_footer"
                            android:layout_below="@+id/bottomLoader"
                            />


                    </RelativeLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/footerButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/white"
                    android:text="List Results "
                    android:visibility="gone">

                </Button>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <include layout="@layout/custom_progress_dialog" />
</merge>