<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_a"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/common_style_W_Match_M_Wrap"
        android:id="@+id/docOnCalLinLay"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:layout_marginTop="@dimen/dimen_13_dp"
        android:background="@color/white">

        <com.mdlive.embedkit.uilayer.sav.CircularNetworkImageView
            android:id="@+id/ProfileImg"
            android:layout_width="@dimen/doctorOnCall_imageSize"
            android:layout_height="@dimen/doctorOnCall_imageSize"
            android:layout_marginBottom="@dimen/doctorOnCall_imageMarginTop_Bottom"
            android:layout_marginLeft="@dimen/doctor_on_call_image_margin_left"
            android:layout_marginTop="@dimen/doctorOnCall_imageMarginTop_Bottom"
            android:scaleType="centerCrop"
            android:src="@drawable/dash_board_doctor_icon" />

        <TextView
            android:id="@+id/PatientName"
            style="@style/chooseProviderTextStyle"
            android:layout_marginTop="@dimen/txtDoctorOnCall_marginTop"
            android:layout_marginLeft="@dimen/txtDoctorOnCall_marginLeft"
            android:layout_toRightOf="@id/ProfileImg"
            android:text="@string/doctor_on_call"
            android:textSize="@dimen/txtDoctorOnCall_textSize" />

        <TextView
            android:id="@+id/txtAverageWaitTime"
            style="@style/chooseProviderTextStyle"
            android:layout_marginTop="@dimen/txtAverageWaitTime_marginTop"
            android:layout_marginLeft="@dimen/txtAverageWaitTime_marginLeft"
            android:layout_toRightOf="@id/ProfileImg"
            android:layout_below="@id/PatientName"
            android:text="@string/average_wait"
            android:textSize="@dimen/txtAverageWaitTime_textSize" />

        <ImageButton
            style="@style/common_style_W_Wrap_H_Wrap"
            android:src="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/loadingTxt"
        style="@style/common_style_W_Wrap_H_Wrap"
        android:text="@string/locating_available_doctors"
        android:layout_below="@id/docOnCalLinLay"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <FrameLayout
        style="@style/common_style_W_Match_M_Wrap"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:id="@+id/filterMainRl"
        android:orientation="horizontal"
       >
        <TextView
            android:id="@+id/txtFilter"
            style="@style/chooseProviderTextStyle"
            android:layout_marginTop="16dp"
            android:text="@string/select_provider"
            android:textColor="@color/darkblack"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/filterTxt"
            style="@style/chooseProviderTextStyle"
            android:layout_marginTop="18dp"
            android:text="@string/filter_txt"
            android:textColor="@color/darkblack"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="right"/>
    </FrameLayout>

    <ListView
        android:id="@+id/chooseProviderList"
        style="@style/common_style_W_Match_M_Wrap"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
    />
    <RelativeLayout
        android:id="@+id/progressBar"
        layout="@layout/custom_progress_bar"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mdliveBottomBlueColor"
        >
        <include
            layout="@layout/custom_progress_bar"
            />
    </RelativeLayout>

</LinearLayout>