<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/questionLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/helpsupportquestionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q:"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/helpsupportquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/answerLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/questionLinearlayout"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/helpsupportanswerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A:"
            android:textSize="17dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/helpsupportanswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"/>

    </LinearLayout>

</RelativeLayout>
