<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mdlive.myaccounts">

    <application android:allowBackup="true"
        android:supportsRtl="false">
        <activity
            android:name=".MyAccountsHome"
            android:screenOrientation="portrait"
            android:theme="@style/MDLive_Red_Theme"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".MyAccountActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MDLive_Red_Theme"
            android:configChanges="locale|touchscreen|orientation|screenLayout|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateHidden|stateUnchanged|adjustPan"/>
    </application>

</manifest>
