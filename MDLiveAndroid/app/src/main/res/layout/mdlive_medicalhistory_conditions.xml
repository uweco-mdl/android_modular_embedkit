<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContainerStyle"
    >
    <!--<include layout="@layout/header" />-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/line_full_bg"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conditions"
            android:id="@+id/textView6"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
         />

    </RelativeLayout>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/firstAutoTextView"
                android:layout_margin="10dp"
                android:textCursorDrawable="@null"
                android:background="@drawable/edittext_bg"
                android:hint="Add Conditions (e.g. Diabetes)"
                android:padding="10dp"
                 />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/secondAutoTextView"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Add Conditions"
                android:padding="10dp"
                />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/thirdAutoTextView"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Add Conditions"
                android:padding="10dp"
                />

        </LinearLayout>
</ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#5877AD"
        android:id="@+id/SavContinueBtn" />
</LinearLayout>
