<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContainerStyle"
    >
    <include layout="@layout/header"
        />
    <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
        style = "@style/BaseTextViewStyle.SubHeaderTextViewStyle"
        android:text="GET STARTED"
     >
        <requestFocus />
     </com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:paddingTop="2dp"
                android:background="#E0D8D8"
                 />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
                   style="@style/gettingstartedTextViewStyle"
                    android:text="Patient"
                    android:id="@+id/patient" />
                <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
                    style="@style/gettingstartedTextViewStyle"
                    android:id="@+id/mark"
                    android:text="Mark Marino" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:layout_weight="20"
                    android:rotation="90"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/symbol2txt" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E0D8D8"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
                    style="@style/gettingstartedTextViewStyle"
                    android:text="My Location"
                    android:id="@+id/location" />
                <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
                    style="@style/gettingstartedTextViewStyle"
                    android:id="@+id/ar"
                    android:text="AR" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:layout_weight="20"
                    android:rotation="90"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/symbol1txt" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E0D8D8"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
                    style="@style/gettingstartedTextViewStyle"
                    android:text="Provider Type"
                    android:id="@+id/providertxt" />
                <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
                    style="@style/gettingstartedTextViewStyle"
                    android:id="@+id/pediatrictxt"
                    android:text="Pediatrician" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:layout_weight="20"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/symbol3txt" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E0D8D8"
                />
            <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
                style="@style/gettingstartedContentStyle"
                android:text="@string/provider_txt"
                android:id="@+id/textView" />

            <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomEt
                style="@style/gettingstarted_edittext"
                android:singleLine="true"
                android:text="(906) 890 6123"
                android:id="@+id/editText" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E0D8D8"
                />
            <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
                style="@style/gettingstartedContentStyle"
                android:text="@string/visit_txt"
                android:id="@+id/visit_txt"
                android:layout_width="match_parent" />

            <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomEt
                style="@style/gettingstarted_edittext"
                android:text="Seen my provider in Person"
                android:singleLine="true"
                android:id="@+id/primary_txt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E0D8D8"
                />
            <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
                style="@style/gettingstartedContentStyle"
                android:text="@string/primary_txt"
                android:id="@+id/Primary_txt" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/radioButton_yes" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/radioButton_no" />
        </RadioGroup>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="#ffffff"
        android:background="#5877AD"
        android:id="@+id/SavContinueBtn" />
</LinearLayout>