<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"   >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContainerStyle"
    android:background="@color/mdliveBottomBlueColor"
    >

 <ScrollView
        style="@style/ScrollViewHolderStyle"
     android:background="@color/mdliveBottomBlueColor"
        >
     <LinearLayout
        style="@style/ContainerStyle"
         android:background="@color/white"
         >

         <RelativeLayout
             style="@style/wagHeaderLinearLayoutStyle"
             android:orientation="horizontal">


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/homeImg"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="20dp"
                 android:text="Your Consultation"
                 android:textColor="@color/white"
                 android:textSize="20sp"
                 />
         </RelativeLayout>

         <LinearLayout
        style="@style/common_style_W_Match_H_Wrap_O_Vertical"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:background="@color/myWindowBackground"
        >



        <TextView
            style="@style/common_style_W_Match_M_Match"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:text="@string/summary_thankyou_txt"
            android:id="@+id/textView9"
            android:textSize="16sp" />

        <TextView
            style="@style/common_style_W_Match_M_Match"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:textColor="@color/darkblack"
            android:text="SUMMARY"
            android:id="@+id/textView10" />

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Test"
                android:id="@+id/txtDoctorName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text=""
                android:id="@+id/txtTotalTime" />

        </LinearLayout>

         <LinearLayout
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="25sp"
                 android:textColor="@color/black"
                 android:text="$49.00"
                 android:id="@+id/txtPaymentSummary" />

         </LinearLayout>
     </RelativeLayout>
             <TextView
            style="@style/common_style_W_Match_M_Match"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
           android:textColor="@color/darkblack"
            android:text="RATE CONSULTATION"
            android:id="@+id/textView15" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            style="@style/RatingBarTheme"
            android:id="@+id/ratingBar" />

            <TextView
            style="@style/common_style_W_Match_M_Match"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textColor="@color/darkblack"
            android:text="@string/next_steps_txt"
            android:id="@+id/textView16" />

           <TextView
            style="@style/common_style_W_Match_M_Match"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text=""
            android:id="@+id/NextStepsContentTv" />

             <Button
                 android:id="@+id/DoneRatingBtn"
                 style="@style/ContinueButtonStyle"
                 android:layout_margin="10dp"
                 android:text="Done"
                 android:layout_marginTop="18dp"
                 android:textSize="16sp"
                 android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>
</ScrollView>

</LinearLayout>

    <include
        layout="@layout/custom_progress_dialog"
        />
    </merge>