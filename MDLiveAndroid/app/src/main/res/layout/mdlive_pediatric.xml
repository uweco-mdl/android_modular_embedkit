<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/pediatricContainer"
        style="@style/ContainerStyle"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/header"
            style="@style/wagHeaderLinearLayoutStyle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:background="@drawable/back_arrow_hdpi" />

            <ImageView
                android:id="@+id/homeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/backImg"
                android:background="@drawable/home_icon" />

            <LinearLayout
                style="@style/LinearLayoutStyle"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    style="@style/ReasonHeaderTxtStyle"
                    android:text="Pediatric Profile" />

                <TextView
                    android:id="@+id/reason_patientTxt"
                    style="@style/ReasonsubHeaderTxtStyle"
                    android:text="Michelle Marino" />
            </LinearLayout>
        </LinearLayout>


        <ScrollView
            android:id="@+id/pediatricScroll"
            style="@style/ScrollViewStyle"
            android:layout_below="@+id/header">

            <LinearLayout
                style="@style/LinearLayoutStyle"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/ageTxt"
                    style="@style/Pediatric_TextStyle"
                    android:text="Patient under 2 years of age"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <TextView
                    style="@style/Pediatric_TextStyle"
                    android:text="@string/pediatric_please_text"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <LinearLayout
                    style="@style/Pediatric_Weight_Layout_style"
                    android:visibility="gone">

                    <TextView
                        style="@style/Pediatric_Weight_text_style"

                        android:text="@string/pediatric_Birth_Weight_text" />

                    <EditText
                        android:id="@+id/edt_birthweight"
                        style="@style/Pediatric_Weight_edittext_style" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/pediatric_lbs_text" />

                </LinearLayout>

                <LinearLayout
                    style="@style/WagLinearLayoutStylePediatric"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/Pediatric_relative_layout_style"
                        android:orientation="vertical"

                        >

                        <TextView
                            style="@style/Pediatric_Weight_text_style"
                            android:layout_width="match_parent"
                            android:text="@string/pediatric_current_Weight_text"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edt_currentweight"
                            style="@style/Pediatric_drop_text_style"
                            android:layout_width="match_parent"
                            android:background="#ffffff"
                            android:gravity="start|left"
                            android:hint=""
                            android:inputType="number"
                            android:maxLength="3" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/pediatric_lbs_text"
                            android:textColorHighlight="@color/black"
                            android:textSize="18sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <View style="@style/ViewStyle" />
                    <TextView
                        android:id="@+id/txt_dietTypeHeader"
                        android:background="#ffffff"
                        android:layout_marginTop="5dp"
                        android:text="Current Diet"
                        style="@style/Pediatric_Weight_text_style" />

                    <TextView
                        android:id="@+id/txt_dietType"
                        style="@style/Pediatric_drop_text_style"
                        android:background="#ffffff"
                        android:drawableEnd="@drawable/dropdown_icon"
                        android:hint="Select"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp" />
                    <View style="@style/ViewStyle"
                        android:id="@+id/separator"/>

                    <TextView
                        style="@style/Pediatric_TextStyle"
                        android:text="@string/pediatric_delivery_text"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_deliveryType"
                        style="@style/Pediatric_drop_text_style"
                        android:hint="@string/pediatric_select_hint"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LinearLayoutStyle"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/layout_birthComplications"
                        style="@style/Pediatric_relative_layout_style">

                        <TextView
                            style="@style/Pediatric_TextStyle"
                            android:layout_centerVertical="true"
                            android:text="@string/pediatric_birthComplications_text" />


                        <RadioGroup
                            android:id="@+id/birthComplications_group"
                            style="@style/Pediatric_radio_group_style">

                            <RadioButton
                                android:id="@+id/birthComplications_yesButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_yes_text" />

                            <RadioButton
                                android:id="@+id/birthComplications_noButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_No_text" />

                        </RadioGroup>
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edt_pleaseDescribe"
                        style="@style/Pediatric_birth_compl_descr_style"
                        android:hint="@string/pediatric_birth_describe"
                        android:visibility="gone" />

                    <View style="@style/viewstyle_behavioural" />

                    <RelativeLayout style="@style/Pediatric_relative_layout_style">

                        <TextView
                            style="@style/Pediatric_TextStyle"
                            android:layout_centerVertical="true"
                            android:text="@string/pediatric_immunization_text" />


                        <RadioGroup
                            android:id="@+id/immunization_group"
                            style="@style/Pediatric_radio_group_style">

                            <RadioButton
                                android:id="@+id/immunization_yesButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_yes_text" />

                            <RadioButton
                                android:id="@+id/immunization_noButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_No_text" />

                        </RadioGroup>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_lastShot_label"
                        style="@style/Pediatric_TextStyle"
                        android:layout_centerVertical="true"
                        android:text="@string/pediatric_last_shot"
                        android:visibility="gone" />


                    <EditText
                        android:id="@+id/edt_lastshot"
                        style="@style/Pediatric_birth_compl_descr_style"
                        android:hint="@string/pediatric_edt_last_shot"
                        android:visibility="gone" />

                    <View style="@style/viewstyle_behavioural"
                        android:id="@+id/edt_lastshot_view"/>

                    <RelativeLayout style="@style/Pediatric_relative_layout_style">

                        <TextView
                            style="@style/Pediatric_TextStyle"
                            android:layout_centerVertical="true"
                            android:text="@string/pediatric_smoking_text" />


                        <RadioGroup
                            android:id="@+id/smoking_group"
                            style="@style/Pediatric_radio_group_style">

                            <RadioButton
                                android:id="@+id/smoking_yesButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_yes_text" />

                            <RadioButton
                                android:id="@+id/smoking_noButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_No_text" />

                        </RadioGroup>


                    </RelativeLayout>

                    <View style="@style/viewstyle_behavioural" />

                    <RelativeLayout style="@style/Pediatric_relative_layout_style">

                        <TextView
                            style="@style/Pediatric_TextStyle"
                            android:layout_centerVertical="true"
                            android:text="@string/pediatric_childcare_text" />


                        <RadioGroup
                            android:id="@+id/childcare_group"
                            style="@style/Pediatric_radio_group_style">

                            <RadioButton
                                android:id="@+id/childcare_yesButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_yes_text" />

                            <RadioButton
                                android:id="@+id/childcare_noButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_No_text" />

                        </RadioGroup>

                    </RelativeLayout>

                    <View style="@style/viewstyle_behavioural" />

                    <RelativeLayout style="@style/Pediatric_relative_layout_style">

                        <TextView
                            style="@style/Pediatric_TextStyle"
                            android:layout_centerVertical="true"
                            android:text="@string/pediatric_siblings_text" />


                        <RadioGroup
                            android:id="@+id/siblings_group"
                            style="@style/Pediatric_radio_group_style">

                            <RadioButton
                                android:id="@+id/siblings_yesButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_yes_text" />

                            <RadioButton
                                android:id="@+id/siblings_noButton"
                                style="@style/Pediatric_radio_button_style"
                                android:text="@string/radio_No_text" />

                        </RadioGroup>


                    </RelativeLayout>
                </LinearLayout>

                <View style="@style/viewstyle_behavioural" />


                <TextView
                    style="@style/Pediatric_TextStyle"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/pediatric_mandatory_text"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_continue_pediatric"
                    style="@style/ContinueButtonStyle"
                    android:clickable="false"
                    android:onClick="continueBtn"
                    android:text="Next"></Button>

                <include
                    style="@style/Footer_Style"
                    layout="@layout/mdlive_footer"
                    />


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


    <include layout="@layout/custom_progress_dialog" />
</merge>