<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout style="@style/ContainerStyle"
        android:background="@color/mdliveBottomBlueColor">

        <RelativeLayout
            style="@style/wagHeaderLinearLayoutStyle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/back_arrow_hdpi" />

            <ImageView
                android:id="@+id/homeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/backImg"
                android:background="@drawable/home_icon" />

            <TextView
                android:id="@+id/headerTxt"
                style="@style/HeaderTextViewStyle"
                android:layout_centerInParent="true"
                android:gravity="left|center"
                android:text="@string/get_started">

            </TextView>
        </RelativeLayout>

        <ScrollView style="@style/ScrollViewStyle"
           android:background="@color/mdliveBottomBlueColor">

            <LinearLayout
                style="@style/LinearLayoutStyle"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/WagParentLinearLayoutStyle"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/patientLl"
                        style="@style/WagLinearLayoutStyle"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GetStartedHeaderContentStyle"
                            android:text="Patient Name" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/patientSpinner"
                        style="@style/SpinnerButtonStyle"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="12dp" />

                    <View
                        style="@style/ViewStyle"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="7dp" />

                    <LinearLayout
                        android:id="@+id/dobLl"
                        style="@style/WagLinearLayoutStyle"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GetStartedHeaderContentStyle"
                            android:text="Date of Birth" />

                        <TextView
                            android:id="@+id/dobTxt"
                            style="@style/GetStartedHeaderContentStyle"
                            android:text="mm/dd/yyyy"
                            android:textColor="@color/mdliveLoginUsernameColor"
                            android:textSize="18sp" />

                        <View
                            style="@style/ViewStyle"
                            android:layout_marginTop="7dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/genderLl"
                        style="@style/WagLinearLayoutStyle"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GetStartedHeaderContentStyle"
                            android:text="@string/gender" />

                        <TextView
                            android:id="@+id/txt_gender"
                            style="@style/GetStartedHeaderContentStyle"
                            android:text=""
                            android:textColor="@color/mdliveLoginUsernameColor"
                            android:textSize="18sp" />

                        <View
                            style="@style/ViewStyle"
                            android:layout_marginTop="7dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/locationLl"
                        style="@style/WagLinearLayoutStyle"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GetStartedHeaderContentStyle"
                            android:text="@string/location" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/locationTxt"
                                style="@style/GetStartedContentTxtStyle"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/imageView3"
                                android:layout_toStartOf="@+id/imageView3"
                                android:gravity="center_vertical"
                                android:text=""

                                android:textColor="@color/location_color"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow" />

                        </RelativeLayout>

                        <View
                            style="@style/ViewStyle"
                            android:layout_marginTop="7dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/telephoneLl"
                        style="@style/WagLinearLayoutStyle"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GetStartedHeaderContentStyle"
                            android:text="Phone Number" />

                        <EditText
                            android:id="@+id/telephoneTxt"
                            style="@style/GetStartedHeaderContentStyle"
                            android:background="@color/transparent_native"
                            android:inputType="number"
                            android:maxLength="12"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <View
                            style="@style/ViewStyle"
                            android:layout_marginTop="7dp" />
                    </LinearLayout>

                    <TextView
                        style="@style/GetStartedHeaderContentStyle"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:text="Your phone number will only be used if customer support is required."
                        android:textColor="@color/black" />
                </LinearLayout>

                <Button
                    android:id="@+id/SavContinueBtn"
                    style="@style/ContinueButtonStyle"
                    android:layout_marginBottom="0dp"
                    android:text="Next" />

                <LinearLayout
                    style="@style/Mdlive_footer_Style">
                    <include
                        style="@style/Footer_Style"
                        layout="@layout/mdlive_footer" />
                    </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <include layout="@layout/custom_progress_dialog" />
</merge>