<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/ContainerStyle"
        >

        <RelativeLayout
            style="@style/wagHeaderLinearLayoutStyle"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_arrow_hdpi"
                android:id="@+id/backImg"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_icon"
                android:id="@+id/homeImg"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/backImg"
                />

            <TextView
                android:id="@+id/headerTxt"
                style = "@style/HeaderTextViewStyle"
                android:gravity="left|center"
                android:layout_centerInParent="true"
                android:text="@string/get_started">

            </TextView>
        </RelativeLayout>
        <ScrollView
            style="@style/ScrollViewStyle">
            <LinearLayout
                style="@style/LinearLayoutStyle"
                android:orientation="vertical"
                >
                <LinearLayout
                    style="@style/WagParentLinearLayoutStyle"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/patientLl"
                        style="@style/WagLinearLayoutStyle">

                        <TextView
                            style = "@style/GetStartedHeaderContentStyle"
                            android:text="Patient Name"
                            />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/patientSpinner"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="3dp"
                        style="@style/SpinnerButtonStyle"/>
                    <View style="@style/ViewStyle"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/dobLl"
                        style="@style/WagLinearLayoutStyle">
                        <TextView
                            style = "@style/GetStartedHeaderContentStyle"
                            android:text="Date of Birth"/>
                        <TextView
                            style = "@style/GetStartedHeaderContentStyle"
                            android:id="@+id/dobTxt"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:text="mm/dd/yyyy"/>
                        <View style="@style/ViewStyle"
                            android:layout_marginTop="7dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/genderLl"
                        style="@style/WagLinearLayoutStyle">
                        <TextView
                            style = "@style/GetStartedHeaderContentStyle"
                            android:text="@string/gender"
                            />
                        <TextView
                            style = "@style/GetStartedHeaderContentStyle"
                            android:id="@+id/txt_gender"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:text=""/>
                        <View style="@style/ViewStyle"
                            android:layout_marginTop="7dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/locationLl"
                        style="@style/WagLinearLayoutStyle">
                        <TextView
                            style = "@style/GetStartedHeaderContentStyle"
                            android:text="@string/location"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                style = "@style/GetStartedContentTxtStyle"
                                android:text=""
                                android:layout_marginLeft="0dp"
                                android:textSize="18sp"
                                android:textColor="@color/location_color"
                                android:id="@+id/locationTxt"
                                android:layout_alignParentLeft="true"
                                android:gravity="center_vertical"
                                />
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="31dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/dropdown_icon"
                                android:layout_centerVertical="true"
                                />

                        </RelativeLayout>

                        <View style="@style/ViewStyle"
                            android:layout_marginTop="7dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/telephoneLl"
                        style="@style/WagLinearLayoutStyle">
                        <TextView
                            style = "@style/GetStartedHeaderContentStyle"
                            android:text="Telephone Number"
                            />
                        <EditText
                            style = "@style/GetStartedHeaderContentStyle"
                            android:id="@+id/telephoneTxt"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:background="@color/transparent_native"
                            android:maxLength="15"
                            android:inputType="number"
                            android:text=""/>
                        <View style="@style/ViewStyle"
                            android:layout_marginTop="7dp"/>
                    </LinearLayout>
                    <TextView
                        style = "@style/GetStartedHeaderContentStyle"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:text="Your phone number will only be used if customer support is required."
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/SavContinueBtn"
                    style="@style/ContinueButtonStyle"
                    android:text="Next"
                    />
            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/mdlive_footer"
            style="@style/Footer_Style" />
    </LinearLayout>
    <include layout="@layout/custom_progress_dialog" />
</merge>