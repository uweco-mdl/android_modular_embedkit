<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    style="@style/ContainerStyle"
    android:background="@color/white"
    >
    <RelativeLayout
        style="@style/wagHeaderLinearLayoutStyle"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/exit_icon"
            android:id="@+id/backImg"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginStart="19dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_icon"
            android:id="@+id/homeImg"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/backImg"
            />
        <TextView
            android:id="@+id/headerTxt"
            style = "@style/HeaderTextViewStyle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/backImg"
            android:text="Pharmacy Filters"
            />
        <TextView
            android:id="@+id/doneTxt"
            style = "@style/endHeaderTextViewStyle"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="end|right|center"
            android:text="APPLY"
            />
    </RelativeLayout>

 <ScrollView
     style="@style/common_style_W_Match_H_Wrap_O_Vertical"
     android:fillViewport="false"
     android:background="@color/white"
     >
     <LinearLayout
        style="@style/WagLinearLayoutStyle"
        android:layout_marginBottom="10dp"
         >


    <LinearLayout
        style="@style/common_style_W_Match_H_Wrap_O_Vertical"


        >
        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
            <TextView
                style="@style/common_style_W_Match_M_Match"
                android:layout_marginTop="15dp"
                android:hint="Pharmacy Name"
                android:textSize="16sp"
                android:layout_marginBottom="7dp"
                android:tag="manual_txt"
               />

            <AutoCompleteTextView
                style="@style/location_edittext"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:hint="@string/pharmacy_opn"
                android:tag="enter_zip"
                android:dropDownVerticalOffset="10dp"
                android:textColor="@color/black"
                android:layout_margin="0dp"
                android:id="@+id/pharmacy_search_name"
                />

            <View style="@style/ViewStyle"
                android:layout_marginTop="7dp"
                />

            </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_loc_txt"
            android:tag="current_loc_txt"
            android:drawableLeft="@drawable/location_icon"
            style="@style/ContinueButtonStyle"
            android:id="@+id/getlocationButton"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="70dip"
            android:paddingRight="60dip"
            />

        <LinearLayout
            style="@style/WagLocationLinearLayoutStyle"
            android:orientation="vertical">
            <TextView
                style="@style/common_style_W_Match_M_Match"
                android:text="@string/ph_manual_search"
                android:textColor="@color/black"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"
                />
            <TextView
                style="@style/common_style_W_Match_M_Match"
                android:text="@string/ph_zipcode"
                android:textColor="@color/grey_txt"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                 />

        <EditText
            style="@style/location_edittext"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:hint=""
            android:tag="enter_zip"
            android:maxLength="10"
            android:layout_margin="0dp"
            android:inputType="number"
            android:id="@+id/zipcodeText"
            />
            <View style="@style/ViewStyle"
                android:layout_marginTop="7dp"/>
            </LinearLayout>
        <LinearLayout
            style="@style/WagLocationLinearLayoutStyle"

            android:orientation="vertical">
        <TextView
            style="@style/common_style_W_Match_M_Match"
            android:tag="or"
            android:text="@string/ph_or_str"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:id="@+id/textView8" />
            <TextView
                style="@style/common_style_W_Match_M_Match"
                android:text="City"
                android:textColor="@color/grey_txt"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                />
        <EditText
            style="@style/location_edittext"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:tag="enter_city"
            android:hint=""
            android:layout_margin="0dp"
            android:id="@+id/cityText"
            />
            <View style="@style/ViewStyle"
                android:layout_marginTop="7dp"/>
            </LinearLayout>
        <LinearLayout
            style="@style/WagLocationLinearLayoutStyle"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">
            <TextView
                style="@style/common_style_W_Match_M_Match"
                android:text="State"
                android:textColor="@color/grey_txt"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="7dp"
                android:textSize="16sp"
                />
        <TextView
            style="@style/location_edittext"
            android:singleLine="true"
            android:tag="select_stg"
            android:hint="Select State"
            android:drawableEnd="@drawable/dropdown_icon"
            android:id="@+id/chooseState"
            android:layout_margin="0dp"
            />
            <View style="@style/ViewStyle"
                android:layout_marginTop="7dp"/>

            </LinearLayout>



    </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>
<include layout="@layout/custom_progress_dialog" />
    </merge>