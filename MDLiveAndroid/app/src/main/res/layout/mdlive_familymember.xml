<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContainerStyle">
    <LinearLayout
        style="@style/wagHeaderLinearLayoutStyle"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow_hdpi"
            android:id="@+id/backImg"
            android:layout_gravity="center"
            android:layout_marginStart="17dp" />

        <TextView
            android:id="@+id/headerTxt"
            style = "@style/HeaderTextViewStyle"
            android:layout_marginLeft="20dp"
            android:text="Add Child"
            />
    </LinearLayout>
    <ScrollView style="@style/ScrollViewStyle"
        >
        <LinearLayout
            android:orientation="vertical"
            style="@style/LinearLayoutStyle"
            android:id="@+id/providerNameLl">
    <TextView
        style = "@style/BaseSubHeaderTextViewStyle"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="19dp"
        android:text="Child must be younger than 18 years old."
        android:layout_width="match_parent" />
    <LinearLayout
        style="@style/WagParentLinearLayoutStyle"
        android:orientation="vertical">
    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="19dp"

            android:id="@+id/patientLl"
            style="@style/WagLinearLayoutStyle">
            <TextView
                style = "@style/GetStartedHeaderContentStyle"
                android:text="Patient Name"
                 />
            <EditText
                style = "@style/GetStartedContentTxtStyle"
                android:hint="Patient Name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@null"
                android:id="@+id/patientEt" />


        </LinearLayout>
        <View style="@style/ViewStyle" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/dobLl"
            android:layout_marginStart="19dp"
            style="@style/WagLinearLayoutStyle">
            <TextView
                style = "@style/GetStartedHeaderContentStyle"
                android:text="Date of Birth"/>

            <TextView
                style = "@style/GetStartedHeaderContentStyle"
                android:id="@+id/dobTxt"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:hint="mm/dd/yyyy"/>
        </LinearLayout>

        <View style="@style/ViewStyle" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/genderLl"
            android:layout_marginStart="19dp"
            style="@style/WagLinearLayoutStyle">
            <TextView
                style = "@style/GetStartedHeaderContentStyle"
                android:text="Gender"
                 />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    style = "@style/GetStartedContentTxtStyle"
                    android:hint=""
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:id="@+id/genderTxt" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/dropdown_icon"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/ViewStyle" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:id="@+id/locationLl"
            android:layout_marginStart="5dp"
            style="@style/LinearLayoutStyle">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/mySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:textSize="16sp"
                android:text="I,Michelle Marino confirm that i'm the legal parent / guardian of the minor above."
                android:checked="false" />
        </LinearLayout>
        </LinearLayout>


    </LinearLayout>
            <Button
                android:id="@+id/addChildBtn"
                style="@style/ContinueButtonStyle"
                android:layout_marginTop="20dp"
                android:text="Add Child"
                />
        </LinearLayout>

    </ScrollView>


    </LinearLayout>