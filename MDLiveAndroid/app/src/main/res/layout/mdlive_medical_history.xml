                <TextView
                    style="@style/BaseTextViewStyle.MyhealthContentStyle"
                    android:id="@+id/Procedure_primary_txt"
                    android:text="@string/my_health_allergies" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/proceduresGroup"
