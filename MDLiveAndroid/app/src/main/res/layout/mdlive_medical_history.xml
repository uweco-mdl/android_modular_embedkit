                <LinearLayout
                    style="@style/BaseTextViewStyle.MyhealthChoiceBtnStyle"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout1"
                    android:layout_toStartOf="@+id/editMedicationsTxt">

                    <TextView
                        style="@style/BaseTextViewStyle.MyhealthListLayoutSubTextStyle"
                        android:layout_width="match_parent"
                        android:text="Medications"
                        android:textSize="20sp"
                        />

                    <TextView
                        style="@style/MyhealthListLayoutSubSubTextStyle"
                        android:id="@+id/MedicationsNameTv"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:ellipsize="end"
