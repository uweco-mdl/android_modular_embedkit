            <LinearLayout
                style="@style/common_style_W_Match_H_Wrap_O_Horizontal"
                android:id="@+id/MyHealthConditionChoiceLl"
                android:orientation="horizontal">
                <TextView
                    style="@style/BaseTextViewStyle.MyhealthContentStyle"
                    android:text="@string/my_health_preexisting" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <RadioGroup
                        android:id="@+id/conditionsGroup"
                        style="@style/BaseTextViewStyle.MyhealthChoiceBtnStyle"
                        android:orientation="horizontal">
                        <RadioButton
                            style="@style/YesNoRadioButtonStyle"
                            android:id="@+id/conditionYesButton"
                            android:text="Yes"/>

                        <RadioButton
                            style="@style/YesNoRadioButtonStyle"
                            android:id="@+id/conditionNoButton"
                            android:layout_marginLeft="10dp"
                            android:text="No"/>

                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_topline_bg"
                android:id="@+id/MyHealthConditionsLl"
                android:orientation="horizontal"
                android:visibility="gone"
                >


                <LinearLayout
                    style="@style/BaseTextViewStyle.MyhealthChoiceBtnStyle"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout"
                    android:layout_toStartOf="@+id/editConditionsTxt">

                    <TextView
                        style="@style/BaseTextViewStyle.MyhealthListLayoutSubTextStyle"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:text="Pre-Existing Conditions"
                        />

                    <TextView
                        style="@style/MyhealthListLayoutSubSubTextStyle"
                        android:id="@+id/MyHealthConditionsNameTv"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="No conditions reported" />

                </LinearLayout>

                <TextView
                    style="@style/common_style_W_Wrap_H_Wrap"
                    android:text="EDIT"
                    android:padding="10dp"
                    android:textColor="@color/green"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/editConditionsTxt" />

            </RelativeLayout>

            <!--<View style="@style/MyhealthViewStyle" />-->


            <LinearLayout
