<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lifestyle_question_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/life_style_question_text"
            android:id="@+id/life_style_question_text"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <RadioGroup
            android:id="@+id/rootradiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/life_style_question_text"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/yesradioButton" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/noradioButton"
                android:layout_marginLeft="10dp"/>

        </RadioGroup>


    </LinearLayout>

</LinearLayout>
