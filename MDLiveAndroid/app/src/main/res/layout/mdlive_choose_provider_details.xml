<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContainerStyle"
    >
    <LinearLayout
        style="@style/wagHeaderLinearLayoutStyle"
        android:elevation="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow_hdpi"
            android:id="@+id/backImg"
            android:layout_gravity="center"
            android:layout_marginStart="19dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_icon"
            android:id="@+id/homeImg"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/backImg"
            />
        <TextView
            android:id="@+id/headerTxt"
            style = "@style/HeaderTextViewStyle"
            android:text="Doctor Details"
            />
    </LinearLayout>

    <ScrollView style="@style/ScrollViewStyle"
        >
        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:orientation="vertical">
            <View style="@style/ViewStyle" />

       <LinearLayout
        style="@style/WagLinearLayoutStyle"
        android:layout_height="280dp"
        android:orientation="vertical"

        >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ProfileImg1"
            android:layout_marginTop="40dp"
            android:layout_height="160dp"
            android:layout_width="160dp"
            android:visibility="visible"
            android:src="@drawable/doctor_icon"
            style="@style/DoctorOnCallImgViewStyle"/>

            <TextView
                style="@style/ProviderDetailsDoctorTxtStyle"
                android:id="@+id/DoctorName"
                android:layout_marginTop="10dp"
                android:gravity="left|center"
                android:textColor="#35393d"
                android:textSize="18sp"
                />
           <TextView
                style="@style/ProviderDetailsDoctorTxtStyle"
                android:id="@+id/specalist"
                android:text="General Practise"
                android:layout_marginTop="5dp"
               android:textColor="#878f95"
               android:gravity="left|center"
                android:textSize="18sp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/tapBtn"
            style="@style/ContinueButtonStyle"
            android:layout_margin="10dp"
            android:text="Choose Dr.Clarke"
            android:layout_marginTop="18dp"
            android:textAllCaps="false" />


            <LinearLayout
                style="@style/LinearLayoutStyle">
                <include layout="@layout/mdlive_provider_specialities"/>
            </LinearLayout>
    <LinearLayout
      style="@style/LinearLayoutStyle">
      <include layout="@layout/mdlive_provider_aboutme"/>
      </LinearLayout>
       <LinearLayout
        style="@style/LinearLayoutStyle">
        <include layout="@layout/mdlive_provider_license"/>
       </LinearLayout>

       <LinearLayout
         style="@style/LinearLayoutStyle">
         <include layout="@layout/mdlive_provider_affilitations"/>
       </LinearLayout>

       <LinearLayout
         style="@style/LinearLayoutStyle">
         <include layout="@layout/provider_location"/>
       </LinearLayout>

       <LinearLayout
          style="@style/LinearLayoutStyle">
          <include layout="@layout/mdlive_provider_languages"/>
       </LinearLayout>
     </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/reqappointmentBtn"
        style="@style/ContinueButtonStyle"
        android:text="Request Appointment"
        android:visibility="gone"
        android:textAllCaps="false" />
    </LinearLayout>