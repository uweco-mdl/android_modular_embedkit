<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContainerStyle"
    android:background="@color/mdliveBackgroundColor"
    >
    <LinearLayout
        style="@style/wagHeaderLinearLayoutStyle"
        android:elevation="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow_hdpi"
            android:id="@+id/backImg"
            android:layout_gravity="center"
            android:layout_marginStart="19dp" />

        <TextView
            android:id="@+id/headerTxt"
            style = "@style/HeaderTextViewStyle"
            android:layout_marginLeft="20dp"
            android:text="Doctor Details"
            />
    </LinearLayout>

    <ScrollView style="@style/ScrollViewStyle"
        >
        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:orientation="vertical">
            <View style="@style/ViewStyle" />

       <LinearLayout
        style="@style/WagLinearLayoutStyle"
        android:layout_height="280dp"
        android:orientation="vertical"

        >

        <com.mdlive.embedkit.uilayer.sav.CircularNetworkImageView
            android:id="@+id/ProfileImg1"
            android:layout_marginTop="30dp"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:visibility="visible"
            android:src="@drawable/doctor_icon"
            style="@style/DoctorOnCallImgViewStyle"/>

            <TextView
                style="@style/ProviderDetailsDoctorTxtStyle"
                android:id="@+id/DoctorName"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:gravity="left|center"
                android:textColor="#35393d"
                android:textSize="18sp"
                />
           <LinearLayout
              style="@style/LinearLayoutStyle"
               android:orientation="horizontal">
           <TextView
                style="@style/ProviderDetailsDoctorTxtStyle"
                android:id="@+id/specalist"
                android:text="General Practise"

               android:layout_marginStart="5dp"
               android:textColor="#878f95"
               android:gravity="left|center"
               android:layout_width="wrap_content"
                android:textSize="18sp"
                />
           <TextView
               style="@style/ProviderDetailsDoctorTxtStyle"
               android:text="Available now"
               android:textColor="#31B404"
               android:gravity="end|right|center"
               android:textSize="18sp"
               />
           </LinearLayout>
           <TextView
               style="@style/ProviderDetailsDoctorTxtStyle"
               android:text="Mercy Hospital"
               android:textColor="#878f95"
               android:gravity="left|center"
               android:layout_marginStart="5dp"
               android:textSize="18sp"
               />
        </LinearLayout>

        <Button
            android:id="@+id/tapBtn"
            style="@style/ContinueButtonStyle"
            android:layout_marginTop="30dp"
            android:text=""
            android:textStyle="bold"
            android:textAllCaps="false" />
            <TextView
                style="@style/ProviderDetailsDoctorTxtStyle"
                android:layout_marginTop="10dp"
                android:gravity="left|center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginStart="15dp"
                android:textColor="#35393d"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Qualifications"
                />

            <LinearLayout
                style="@style/LinearLayoutStyle"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp">
                <include layout="@layout/mdlive_provider_specialities"/>
            </LinearLayout>
    <LinearLayout
      style="@style/LinearLayoutStyle"
        android:layout_marginStart="5dp">
      <include layout="@layout/mdlive_provider_aboutme"/>
      </LinearLayout>
       <LinearLayout
        style="@style/LinearLayoutStyle"
           android:layout_marginStart="5dp"
           android:layout_marginTop="10dp">
        <include layout="@layout/mdlive_provider_license"/>
       </LinearLayout>

       <LinearLayout
         style="@style/LinearLayoutStyle"
           android:layout_marginStart="5dp"
           android:layout_marginTop="10dp">
         <include layout="@layout/mdlive_provider_affilitations"/>
       </LinearLayout>

       <LinearLayout
         style="@style/LinearLayoutStyle"
           android:layout_marginStart="5dp"
           android:layout_marginTop="10dp">
         <include layout="@layout/mdlive_provider_location"/>
       </LinearLayout>

       <LinearLayout
          style="@style/LinearLayoutStyle"
           android:layout_marginStart="5dp"
           android:layout_marginTop="10dp">
          <include layout="@layout/mdlive_provider_languages"/>
       </LinearLayout>
     </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/reqappointmentBtn"
        style="@style/ContinueButtonStyle"
        android:text="Request Appointment"
        android:visibility="gone"
        android:textAllCaps="false" />
    </LinearLayout>