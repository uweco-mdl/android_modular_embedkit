<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/ContainerStyle"
        android:background="@color/mdliveBackgroundColor">

        <LinearLayout
            style="@style/wagHeaderLinearLayoutStyle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="19dp"
                android:background="@drawable/back_arrow_hdpi" />

            <TextView
                android:id="@+id/headerTxt"
                style="@style/HeaderTextViewStyle"
                android:layout_marginLeft="20dp"
                android:text="Doctor Details" />
        </LinearLayout>

        <ScrollView style="@style/ScrollViewStyle">

            <LinearLayout
                style="@style/LinearLayoutStyle"
                android:orientation="vertical">

                <View style="@style/ViewStyle" />

                <LinearLayout
                    style="@style/WagLinearLayoutStyle"
                    android:layout_height="250dp"
                    android:orientation="vertical"

                    >

                    <com.mdlive.embedkit.uilayer.sav.CircularNetworkImageView
                        android:id="@+id/ProfileImg1"
                        style="@style/DoctorOnCallImgViewStyle"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/doctor_icon"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/DoctorName"
                        style="@style/ProviderDetailsDoctorTxtStyle"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left|center"
                        android:textColor="#35393d" />

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                    android:layout_marginStart="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/specalist"
                            style="@style/ProviderDetailsDoctorTxtStyle"
                            android:layout_width="wrap_content"

                            android:gravity="left|center"
                            android:text="General Practise"
                            android:textColor="#878f95" />

                        <TextView
                            android:id="@+id/withpatientTxt"
                            style="@style/ProviderDetailsDoctorTxtStyle"
                            android:gravity="end|right|center"
                            android:text=""
                            android:textColor="#31B404" />
                    </LinearLayout>

                    <TextView
                        style="@style/ProviderDetailsDoctorTxtStyle"
                        android:layout_marginStart="5dp"
                        android:gravity="left|center"
                        android:text="Capital Regional\nMedical Center"
                        android:textColor="#878f95" />
                </LinearLayout>

                <Button
                    android:id="@+id/tapBtn"
                    style="@style/ContinueButtonStyle"
                    android:layout_marginTop="30dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textAllCaps="false" />

                <LinearLayout
                    android:id="@+id/detailsLl"
                    style="@style/LinearLayoutStyle"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ProviderDetailsDoctorTxtStyle"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="15dp"
                        android:ellipsize="end"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="Qualifications"
                        android:textColor="#35393d"
                         />

                    <LinearLayout
                        android:id="@+id/specialitiesLl"
                        style="@style/LinearLayoutStyle"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp">

                        <include layout="@layout/mdlive_provider_specialities" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hosaffiliationsLl"
                        style="@style/LinearLayoutStyle"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp">

                        <include layout="@layout/mdlive_provider_license" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/educationLl"
                        style="@style/LinearLayoutStyle"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp">

                        <include layout="@layout/mdlive_provider_education" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/languagesLl"
                        style="@style/LinearLayoutStyle"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp">

                        <include layout="@layout/mdlive_provider_languages" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/boardCertificationsLl"
                        style="@style/LinearLayoutStyle"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp">

                        <include layout="@layout/mdlive_provider_location" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/aboutmeLl"
                        style="@style/LinearLayoutStyle"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp">

                        <include layout="@layout/mdlive_provider_aboutme" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <include layout="@layout/mdlive_provider_languages" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/reqappointmentBtn"
                style="@style/ContinueButtonStyle"
                android:text="Request Appointment"
                android:textAllCaps="false"
                android:visibility="gone" />

            <include layout="@layout/mdlive_footer"
                style="@style/Footer_Style"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/custom_progress_dialog" />
</merge>