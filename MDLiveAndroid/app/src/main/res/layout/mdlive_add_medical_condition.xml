<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"   >
<LinearLayout
    style="@style/ContainerStyle">
<!--
    <include layout="@layout/header" />-->
    <LinearLayout
        style="@style/wagHeaderLinearLayoutStyle"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/exit_icon"
            android:id="@+id/backImg"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginStart="19dp" />
        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_icon"
            android:id="@+id/homeImg"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/backImg"
            />-->
        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
        <LinearLayout
            android:layout_weight="75"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp">

            <TextView
                style = "@style/ReasonHeaderTxtStyle"
                android:id="@+id/CommonConditionsAllergiesHeaderTv"
                android:text="Add Conditions"
                />
            <TextView
                android:id="@+id/reason_patientTxt"
                style = "@style/ReasonsubHeaderTxtStyle"
                android:text="Michelle Marino"
                />

        </LinearLayout>

            <TextView
                android:id="@+id/doneTxt"
                android:layout_height="70dp"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:text="DONE"
                android:textSize="18sp"
                android:textColor="@color/white"

                />

            </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/doneText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Michelle Marino"
                />
        </LinearLayout>
    </LinearLayout>

    <ScrollView style="@style/ScrollViewStyle">


        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:orientation="vertical"
            android:id="@+id/AddConditionsLl"
            android:focusableInTouchMode="true"
            >

        </LinearLayout>

    </ScrollView>

    <Button
        style="@style/ContinueButtonStyle"
        android:text="Save"
        android:visibility="gone"
        android:id="@+id/SaveBtn" />

</LinearLayout>
    <include
        layout="@layout/custom_progress_dialog" />
</merge>